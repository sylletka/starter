{
    "name": "sylletka/starter",
    "description": "Yii 2 Basic Project Template enhanced",
    "keywords": ["yii2", "framework", "basic", "project template"],
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/sylletka/starter/issues?state=open",
        "wiki": "https://github.com/sylletka/starter/wiki",
        "source": "https://github.com/sylletka/starter"
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": "~2.0.5",
        "yiisoft/yii2-bootstrap": "~2.0.0",
        "yiisoft/yii2-swiftmailer": "~2.0.0",
        "yiisoft/yii2-authclient": "*",
        "yiisoft/yii2-jui": "*",
        "yiisoft/yii2-imagine": "~2.0.0",
        "sylletka/yii2-admin" : "dev-master",
        "pheme/yii2-settings": "*",
        "sweelix/yii2-plupload": "*",
        "2amigos/yii2-ckeditor-widget" : "*",
        "faryshta/yii2-clockpicker" : "dev-master",
        "mtdowling/cron-expression" : "dev-master",
        "nex/yii2-chosen": "dev-master"
    },
    "require-dev": {
        "yiisoft/yii2-debug": "~2.0.0",
        "yiisoft/yii2-gii": "~2.0.0",
        "yiisoft/yii2-faker": "~2.0.0",

        "codeception/base": "^2.2.3",
        "codeception/verify": "~0.3.1",
        "codeception/specify": "~0.4.3"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}

